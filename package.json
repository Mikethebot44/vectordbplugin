{
  "name": "supabase-semantic-search",
  "version": "0.1.1",
  "description": "Easy-to-use semantic search plugin for Supabase with automatic embedding generation and vector similarity search",
  "type": "module",
  "author": "Michael Jupp",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "supabase-semantic-search": "dist/cli.cjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "sql",
    "supabase",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:cli && npm run postbuild",
    "build:cjs": "npx tsc -p tsconfig.cjs.json",
    "build:esm": "npx tsc -p tsconfig.esm.json && node scripts/fix-esm.js",
    "build:cli": "npx tsc -p tsconfig.cli.json && move dist\\cli.js dist\\cli.cjs",
    "postbuild": "chmod +x dist/cli.cjs",
    "dev": "npx tsc --watch",
    "test": "node test/example.js",
    "test:env": "node -r dotenv/config test/example.js",
    "prepublishOnly": "npm run build && npm test",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('dist')) fs.rmSync('dist', {recursive:true, force:true})\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^17.2.1",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "supabase",
    "semantic-search",
    "vector-database",
    "embeddings",
    "openai",
    "pgvector",
    "similarity-search",
    "ai",
    "machine-learning"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mjupp/supabase-semantic-search.git"
  },
  "homepage": "https://github.com/mjupp/supabase-semantic-search#readme",
  "bugs": {
    "url": "https://github.com/mjupp/supabase-semantic-search/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
